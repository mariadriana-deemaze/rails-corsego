#controls-carousel.relative{"data-carousel" => "static"}
    .relative.overflow-hidden.rounded-lg{ :class => "h-[80vh]"}
        - slides.each do |slide|
            .hidden.duration-700.ease-in-out{"data-carousel-item" => ""}
                %img.absolute.block.w-full{:alt => "...", :class => "-translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2", :src => slide}
        %button.absolute.top-0.left-0.z-30.flex.items-center.justify-center.h-full.px-4.cursor-pointer.group.focus:outline-none{"data-carousel-prev" => "", :type => "button"}
            %span.inline-flex.items-center.justify-center.w-10.h-10.rounded-full.group-focus:ring-4.group-focus:ring-white.group-focus:outline-none{:class => "bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 dark:group-focus:ring-gray-800/70"}
                %svg.w-6.h-6.text-white.dark:text-gray-800{"aria-hidden" => "true", :fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
                    %path{:d => "M15 19l-7-7 7-7", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
                %span.sr-only Previous
        %button.absolute.top-0.right-0.z-30.flex.items-center.justify-center.h-full.px-4.cursor-pointer.group.focus:outline-none{"data-carousel-next" => "", :type => "button"}
            %span.inline-flex.items-center.justify-center.w-10.h-10.rounded-full.group-focus:ring-4.group-focus:ring-white.group-focus:outline-none{:class => "bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 dark:group-focus:ring-gray-800/70"}
                %svg.w-6.h-6.text-white.dark:text-gray-800{"aria-hidden" => "true", :fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
                    %path{:d => "M9 5l7 7-7 7", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
                %span.sr-only Next
