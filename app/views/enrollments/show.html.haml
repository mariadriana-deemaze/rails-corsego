.container.mx-auto.w-full{:class => "md:w-2/3"}
  / = render "shared/error_messages", object: notice
  = render @enrollment
  = link_to 'Edit this enrollment', edit_enrollment_path(@enrollment), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
  .inline-block.ml-2
    = button_to 'Destroy this enrollment', enrollment_path(@enrollment), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium"
  = link_to 'Back to enrollments', enrollments_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
