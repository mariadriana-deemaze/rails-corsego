!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title 
      = page_full_title(yield(:title))
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    %script{src: "https://js.stripe.com/v3/"}
    %link{:crossorigin => "", :href => "https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css", :rel => "stylesheet"}/
    = stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload"
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
  %body
    %main.w-full.flex.flex-col
      = render 'layouts/navbar'
      %div.overflow-y-auto.w-full{:class =>"mt-[55px] lg:mt-[85px] h-[calc(100vh_-_85px)]"}
        = render 'layouts/messages'
        = yield
        =# debug(params) if Rails.env.development?
