.w-full.max-w-sm.bg-white.rounded-lg.shadow-md.dark:bg-gray-800.dark:border-gray-700
  %a{href: "#"}
    / Add image laterrrz
    / %img.p-8.rounded-t-lg{alt: "product image", src: "/docs/images/products/apple-watch.png"}/
  .px-5.pb-5
    %a{href: "#"}
      %h5.text-xl.font-semibold.tracking-tight.text-gray-900.dark:text-white
        = user.email
      %p.text-sm.tracking-tight.text-gray-900.dark:text-white 
        Signed up
        = time_ago_in_words(user.created_at)
      %p.text-sm.tracking-tight.text-gray-900.dark:text-white
        = 'sign_in_count'.humanize
        = user.sign_in_count
      %p.text-sm.tracking-tight.text-gray-900.dark:text-white
        = 'current_sign_in_at'.humanize
        = user.current_sign_in_at
      %p.text-sm.tracking-tight.text-gray-900.dark:text-white
        = 'last_sign_in_at'.humanize
        = user.last_sign_in_at
      %p.text-sm.tracking-tight.text-gray-900.dark:text-white
        = 'current_sign_in_ip'.humanize
        = user.current_sign_in_ip
      %p.text-sm.tracking-tight.text-gray-900.dark:text-white
        = 'last_sign_in_ip'.humanize
        = user.last_sign_in_ip
      %p.text-sm.tracking-tight.text-gray-900.dark:text-white
        Confirmed e-mail?
        - if user.confirmed_at.present?
          %span.badge-min.badge-green  Yes
        - else
          %span.badge-min.badge-red  No
    
      / = link_to "Show this course", course, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
      / = link_to 'Edit this course', edit_course_path(course), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
      / = link_to "Destroy course", course, data: {turbo_method: :delete}, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    