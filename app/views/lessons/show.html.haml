.breadcrumbs
  = link_to 'Courses', courses_path
  \/
  = link_to @lesson.course.title, course_path(@lesson.course)
  \/
  = link_to @lesson.title, course_lesson_path(@course, @lesson)

.page-wrapper{:class => "md:w-2/3"}
  .mx-auto
    - if notice.present?
      %p#notice.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.inline-block= notice
    = render @lesson
    = link_to 'Edit this lesson', edit_course_lesson_path(@course, @lesson), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    .inline-block.ml-2
      =# button_to 'Destroy this lesson', lesson_path(@lesson), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium"
    = link_to 'Back to course', course_path(@course), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
