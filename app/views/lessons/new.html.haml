= provide(:title, "Create new lesson for #{@course.title.downcase}")

.breadcrumbs
  = link_to 'Courses', courses_path
  \/
  = link_to @course.title, course_path(@course)

.page-wrapper{:class => "md:w-2/3"}
  %h1.font-bold.text-4xl New lesson
  = render "form", lesson: @lesson
  = link_to 'Back to course', course_path(@course), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
