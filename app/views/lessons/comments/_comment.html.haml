.flex.flex-col
  .flex.flex-row.gap-4.justify-between
    .flex.flex-row.gap-4
      = link_to comment.user, user_path(comment.user)
      #{time_ago_in_words(comment.created_at)}
      ago
    - if policy(comment).destroy?  
      = link_to "Delete", [@course, @lesson, comment], data: {turbo_method: :delete}, class: 'danger-button'
  .flex.flex-col
    = comment.content
