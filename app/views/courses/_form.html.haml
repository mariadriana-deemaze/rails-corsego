= simple_form_for @course, local:true, data: { turbo: false } do |f|
  = render "shared/error_messages", object: f.object
  = f.input :title
  = f.label :description
  = f.rich_text_area :description
  = f.error :description, class: 'font-medium text-md text-red-500 mt-2'
  = f.input :short_description
  = f.input :language, collection: ["English", "Portuguese"]
  = f.input :level, collection: ["Beginner", "Intermedite", "Advanced"]
  = f.input :price
  = f.button :submit
