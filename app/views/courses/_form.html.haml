= simple_form_for @course do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .flex.flex-col.gap-3
    = f.input :title
    = f.label :description
    = f.rich_text_area :description
    %span= f.error :description, class: 'font-medium text-md text-red-500 mt-2'
    = f.input :short_description
    = f.input :language, collection: ["English", "Portuguese"]
    = f.input :level, collection: ["Beginner", "Intermedite", "Advanced"]
    = f.input :price
    = f.button :submit
