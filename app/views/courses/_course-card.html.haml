            - else
              %span.badge-min.badge-red.block.self-start
                %svg.h-4.w-4{"aria-hidden" => "true", :fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
